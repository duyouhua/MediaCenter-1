    <LinearLayout  
        android:id="@+id/lltitleList" 
        android:background="@drawable/tab_bg"
        android:layout_height="150dip"
		android:layout_width="match_parent"	
		android:layout_alignParentBottom="true"
		android:paddingLeft="150dip"
		android:paddingRight="150dip"
        >
		<com.uvchip.utils.AnimTabLayout 
	   		android:id="@+id/titleList"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"	
         >
		</com.uvchip.utils.AnimTabLayout> 
	</LinearLayout>
	<RelativeLayout 
	    android:layout_above="@+id/lltitleList"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
	    >
		<LinearLayout 
		    android:id="@+id/llprepage"
		    android:layout_alignParentLeft="true"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:gravity="center"
			android:background="#00FFFFFF"
	    >
		    <ImageView
		        android:id="@+id/image_pre"
		        android:layout_width="100dip"
				android:layout_height="100dip"
				android:src="@drawable/btn_noneprepage"
		     ></ImageView>
		</LinearLayout> 
		<!--     				 
		<android.support.v4.view.ViewPager 			    
			        android:id="@+id/viewpager"
			        android:layout_toLeftOf="@+id/llnextpage"
			        android:layout_toRightOf="@+id/llprepage"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:paddingTop="40dip"
			        android:paddingLeft="40dip"
			        android:paddingBottom="40dip"
			        android:paddingRight="40dip"
			        android:layout_gravity="center" >
		</android.support.v4.view.ViewPager>-->
		<com.uvchip.utils.MyViewPager 
		    android:id="@+id/viewpager"
			android:layout_toLeftOf="@+id/llnextpage"
			android:layout_toRightOf="@+id/llprepage"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingTop="30dip"
			android:paddingLeft="40dip"
			android:paddingBottom="30dip"
			android:paddingRight="40dip"
			android:layout_gravity="center"		
		    >
		</com.uvchip.utils.MyViewPager>
		<LinearLayout 
		    android:id="@+id/llnextpage"
		    android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:gravity="center"
			android:background="#00FFFFFF"
	    >
		     <ImageView
		        android:layout_width="100dip"
				android:layout_height="100dip"
				android:src="@drawable/btn_nonenextpage"
				android:id="@+id/image_next"
		     ></ImageView>
		</LinearLayout> 
	</RelativeLayout>	       	
</RelativeLayout>
