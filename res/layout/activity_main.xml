    xmlns:tools="http://schemas.android.com/tools"
     android:id="@+id/main"
     android:background="@drawable/bg_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
    
    <!-- android:background="@drawable/app_bg2" -->
    <!--  
    <LinearLayout 
        android:id="@+id/logo"
